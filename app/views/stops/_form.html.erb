<%= render('layouts/errors', :object => @stop) %>

<%= form_for(@stop) do |f| %>
  <div class="form-group">
    <%= f.label :time %>
    <%= f.text_field :time %>
  </div>

  <div class="form-group">
    <%= f.label :line %>
    <%= collection_select(:stop, :line_id, Line.all, :id, :color, {:prompt => true}) %>
  </div>

  <div class="form-group">
    <%= f.label :station %>
    <%= collection_select(:stop, :station_id, Station.all, :id, :name, {:prompt => true}) %>
  </div>
  <%= f.submit(:class => "btn btn-primary") %>
<% end %>
